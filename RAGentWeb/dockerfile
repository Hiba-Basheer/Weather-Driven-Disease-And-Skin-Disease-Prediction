# Builder Stage
FROM python:3.12-slim AS builder
WORKDIR /app

# Install build deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential gcc g++ curl ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install torch (CPU)
RUN pip install --no-cache-dir --user \
    torch==2.4.1 --index-url https://download.pytorch.org/whl/cpu

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Download embedding model
RUN mkdir -p models/embeddings && \
    curl -L -o models/embeddings/pytorch_model.bin \
         https://huggingface.co/sentence-transformers/paraphrase-MiniLM-L3-v2/resolve/main/pytorch_model.bin && \
    curl -L -o models/embeddings/config.json \
         https://huggingface.co/sentence-transformers/paraphrase-MiniLM-L3-v2/resolve/main/config.json && \
    curl -L -o models/embeddings/tokenizer.json \
         https://huggingface.co/sentence-transformers/paraphrase-MiniLM-L3-v2/resolve/main/tokenizer.json && \
    curl -L -o models/embeddings/vocab.txt \
         https://huggingface.co/sentence-transformers/paraphrase-MiniLM-L3-v2/resolve/main/vocab.txt


# Runtime Stage
FROM python:3.12-slim
WORKDIR /app

# Runtime system deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    libgomp1 libjpeg62-turbo zlib1g curl ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy installed python packages from builder 
COPY --from=builder /usr/local/lib/python3.12/site-packages /usr/local/lib/python3.12/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy embedding model
COPY --from=builder /app/models/embeddings models/embeddings

# Copy entire project
COPY . .

# Environment
ENV PATH=/usr/local/bin:$PATH \
    PYTHONUNBUFFERED=1 \
    TF_CPP_MIN_LOG_LEVEL=2 \
    FAISS_PATH=/app/data/vector_store/faiss_index \
    PYTHONPATH=/app

# Non-root user
RUN useradd -m appuser && chown -R appuser:appuser /app
USER appuser

EXPOSE 8000

HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "1"]