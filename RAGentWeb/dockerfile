# Use lightweight Python base image
FROM python:3.10-slim

# Set working directory
WORKDIR /app

# Copy requirements first (for caching)
COPY requirements.txt .

# Install dependencies efficiently
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir gunicorn uvicorn scikit-learn && \
    rm -rf /root/.cache/pip

# Copy only essential source and model files
COPY src ./src
COPY models ./models

# Expose FastAPI port
EXPOSE 8000

# Environment variable
ENV PYTHONUNBUFFERED=1

# Run the app with Gunicorn and Uvicorn workers
CMD ["gunicorn", "-k", "uvicorn.workers.UvicornWorker", "src.main:app", "--host", "0.0.0.0", "--port", "8000"]
