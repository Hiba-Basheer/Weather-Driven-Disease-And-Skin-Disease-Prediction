# Runtime Stage
FROM python:3.12-slim
WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    libgomp1 libjpeg62-turbo zlib1g curl ca-certificates \
    && rm -rf /var/lib/apt/lists/*

COPY --from=builder /usr/local/lib/python3.12/site-packages /usr/local/lib/python3.12/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy embeddings from builder stage
COPY --from=builder /app/models/embeddings models/embeddings

# Copy all other ML/DL/Image models and FAISS vector store
COPY models /app/models
COPY data/vector_store /app/data/vector_store

# Copy the rest of the app code
COPY . .

ENV PATH=/usr/local/bin:$PATH \
    PYTHONUNBUFFERED=1 \
    TF_CPP_MIN_LOG_LEVEL=2 \
    FAISS_PATH=/app/data/vector_store/faiss_index \
    PYTHONPATH=/app

RUN useradd -m -s /bin/bash appuser && chown -R appuser:appuser /app
USER appuser
EXPOSE 8000

CMD exec uvicorn src.main:app --host 0.0.0.0 --port ${PORT} --workers 1 --log-level info
